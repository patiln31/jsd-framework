<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Parallel Browser Suite" parallel="tests" thread-count="2">
    
    <!-- Listeners -->
    <listeners>
        <listener class-name="org.jsd.listeners.TestCleanupListener"/>
        <listener class-name="org.jsd.listeners.EnvironmentListener"/>
        <listener class-name="org.jsd.listeners.ScreenshotListener"/>
        <listener class-name="org.jsd.listeners.EmailReportListener"/>
        <listener class-name="org.jsd.listeners.AllureReportListener"/>
    </listeners>
    
    <!-- Chrome Test -->
    <test name="Chrome Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="org.jsd.tests.LoginTest"/>
            <class name="org.jsd.tests.LoginDataDrivenTest"/>
        </classes>
    </test>
    
    <!-- Edge Test -->
    <test name="Edge Test">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="org.jsd.tests.LoginTest"/>
            <class name="org.jsd.tests.LoginDataDrivenTest"/>
        </classes>
    </test>

</suite>
